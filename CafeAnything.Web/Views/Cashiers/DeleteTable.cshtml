@model CafeAnything.DomainModel.Tables

@{
    ViewBag.Title = "Delete Table";
    Layout = "~/Views/CashierLayout/CashierHomeLayout.cshtml";
}

<h2>Delete Table</h2>


<div class="jumbotron">

    <h2 style="color:red">Are you sure you want to delete this?</h2>
    <br />

    <div>
        <dl class="dl-horizontal">

            <dt>
                @Html.DisplayName("Table No")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TableNo)
            </dd>

            <dt>
                @Html.DisplayName("Table Status")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TStatus)
            </dd>

        </dl>

        <div class="text-danger" id="errorMsg">
            @{
                if (ViewBag.DeleteWarning != null)
                {
                    <p class="alert alert-danger text-center">@ViewBag.DeleteWarning</p>
                }
            }
        </div>

        @using (Html.BeginForm("DeleteTable", "Cashiers", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @Html.TextBox("Delete", "Delete Table", new { type = "submit", @class = "w3-btn w3-white w3-border w3-border-red w3-round-large" }) |
                    @Html.ActionLink(" Tables Page", "Tables", "Cashiers", new { @class = "btn btn-primary btn-sm w3-button w3-aqua w3-round-xlarge w3-border-red glyphicon glyphicon-home" })
                </div>
            </div>
        }
    </div>
</div>