@model CafeAnything.DomainModel.Categories

@{
    ViewBag.Title = "Delete Category";
    Layout = "~/Views/AdminLayout/AdminHomeLayout.cshtml";
}

<div class="jumbotron">

    <h2 style="color:red">Are you sure you want to delete this?</h2>
    <br />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CategoryType)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CategoryType)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FoodName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FoodName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>

        <dd>
           RM @Html.DisplayFor(model => model.Price)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FoodImg)
        </dt>

        <dd>
            @{
                var base64 = Convert.ToBase64String(Model.FoodImg);
                var imgsrc = string.Format("data:image/gif;base64,{0}", base64);
            }
            <img src="@imgsrc" style="max-height : 280px ; max-width:250px;" />
        </dd>

    </dl>

    <p class="alert alert-danger"><strong>Note : </strong>Selected Category which Customer Ordered will be deleted.</p>

    @using (Html.BeginForm("DeleteCategory", "Admins", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.TextBox("Delete", "Delete Category", new { type = "submit", @class = "w3-btn w3-white w3-border w3-border-red w3-round-large" }) |
                @Html.ActionLink(" Menu Page", "CategoryMenu", "Admins", new { @class = "btn btn-primary btn-sm w3-button w3-aqua w3-round-xlarge w3-border-red glyphicon glyphicon-home" })
            </div>
        </div>
    }
</div>
